---

<section
  id="hjem"
  class="relative min-h-screen flex items-center justify-center pt-20 overflow-hidden"
>
  <!-- Background gradient -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-gray to-brand-dark"
  >
  </div>
  <div
    class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(57,255,20,0.08)_0%,_transparent_70%)]"
  >
  </div>

  <!-- Decorative elements -->
  <div
    class="absolute top-1/4 -left-32 w-64 h-64 bg-brand-green/5 rounded-full blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-1/4 -right-32 w-96 h-96 bg-brand-green/5 rounded-full blur-3xl"
  >
  </div>

  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-5xl md:text-7xl font-black leading-tight mb-6">
      Parken Treningssenter <span class="block text-brand-green">Døgnåpent gym i Eikanger</span>
    </h1>
    <img
      src="/images/logo.png"
      alt="Parken Treningssenter – Døgnåpent gym i Eikanger"
      class="w-64 sm:w-80 md:w-96 mx-auto mb-6"
      width="384"
      height="384"
      fetchpriority="high"
    />

    <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-4 max-w-2xl mx-auto">
      Ditt lokale treningssenter i Eikanger, Nordhordland
    </p>

    <div
      class="flex flex-wrap justify-center gap-4 md:gap-8 text-sm md:text-base text-gray-400 mb-10"
    >
      <span class="flex items-center gap-2">
        <svg class="w-5 h-5 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Døgnåpent 24/7
      </span>
      <span class="flex items-center gap-2">
        <svg class="w-5 h-5 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Ingen binding
      </span>
      <span class="flex items-center gap-2">
        <svg class="w-5 h-5 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Lav pris
      </span>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="https://parkentrening.ibooking.no/nettinnmelding"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary"
      >
        Bli medlem
      </a>
      <a
        href="#app-download"
        class="app-download-btn btn-secondary"
      >
        Last ned Membro-appen
      </a>
    </div>
  </div></section>
